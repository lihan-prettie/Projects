@{
    ViewData["Title"] = "使用者登入";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(180deg, #fff8dc 0%, #fff 100%);
            font-family: "Microsoft JhengHei", sans-serif;
        }

        .login-box {
            background-color: #fffdf5;
            border: 2px solid #ffd54f;
            border-radius: 15px;
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
            max-width: 420px;
            margin: 80px auto;
            padding: 40px 35px;
        }

            .login-box h1 {
                text-align: center;
                font-weight: 800;
                color: #b8860b;
                margin-bottom: 30px;
            }

        .form-label {
            font-weight: 600;
            color: #8b6b00;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #ffd54f;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #ffa500;
                box-shadow: 0 0 6px rgba(255, 165, 0, 0.5);
            }

        .btn-main {
            background-color: #ffa500;
            color: #fff8dc;
            border-radius: 30px;
            padding: 10px 25px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            width: 100%;
        }

            .btn-main:hover {
                background-color: #ffb74d;
                color: #fff;
                box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
            }

        .demo-buttons .btn {
            border-radius: 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .demo-buttons .btn:hover {
                transform: scale(1.05);
            }

        footer {
            text-align: center;
            margin-top: 40px;
            color: #b8860b;
            font-size: 0.9rem;
        }
    </style>
}

<div class="login-box">
    <h1><i class="bi bi-box-arrow-in-right me-2"></i>使用者登入</h1>

    <div class="mb-3">
        <label class="form-label">電子信箱</label>
        <input type="email" id="account" class="form-control" placeholder="example@mail.com" />
    </div>

    <div class="mb-3">
        <label class="form-label">密碼</label>
        <input type="password" id="password" class="form-control" placeholder="請輸入密碼" />
    </div>

    <button id="confirm" class="btn btn-main mb-3">
        <i class="bi bi-check-circle me-1"></i> 登入系統
    </button>

    <div class="text-center fw-bold text-secondary mb-2">或快速登入 DEMO 帳號</div>
    <div class="demo-buttons d-flex justify-content-between">
        <button class="btn btn-outline-warning flex-fill mx-1" id="demo-emp">
            員工
        </button>
        <button class="btn btn-outline-warning flex-fill mx-1" id="demo-mgr">
            主管
        </button>
        <button class="btn btn-outline-warning flex-fill mx-1" id="demo-boss">
            老闆
        </button>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        
        function showLoading() {
            Swal.fire({
                title: "登入驗證中...",
                html: '<div class="spinner-border text-warning" role="status"></div>',
                allowOutsideClick: false,
                showConfirmButton: false,
                background: '#fffaf0',
                color: '#b8860b'
            });
        }

        function login(account, password) {
            if (!account || !password) {
                Swal.fire({
                    title: "請重新輸入",
                    text: "帳號密碼為必填欄位",
                    icon: "error",
                    confirmButtonText: "確認",
                });
                return;
            }

            showLoading(); // 顯示漏斗動畫

            $.ajax({
                type: "POST",
                url: "/Login/LoginCheck",
                data: { UserEmail: account, UserPassword: password },
                success: function (res) {
                    if (res.success) {
                        Swal.fire({
                            title: "登入成功",
                            icon: "success",
                            timer: 1000,
                            showConfirmButton: false,
                            background: '#fff8dc'
                        }).then(() => {
                            window.location.href = res.redirectUrl;
                        });
                    } else {
                        Swal.fire("登入失敗", "請重新確認帳號密碼", "error");
                    }
                },
                error: function () {
                    Swal.fire("錯誤", "請聯絡工程師", "error");
                }
            });
        }

        // ✅ 一般登入按鈕
        $("#confirm").on("click", () => {
            const account = $("#account").val().trim();
            const password = $("#password").val().trim();
            login(account, password);
        });

        // ✅ 三個 Demo 登入按鈕
        $("#demo-emp").on("click", () => {
            $("#account").val("employee@gmail.com");
            $("#password").val("Test!000");
            login("employee@gmail.com", "Test!000");
        });

        $("#demo-mgr").on("click", () => {
            $("#account").val("manager@gmail.com");
            $("#password").val("Test!000");
            login("manager@gmail.com", "Test!000");
        });

        $("#demo-boss").on("click", () => {
            $("#account").val("boss@gmail.com");
            $("#password").val("Test!000");
            login("boss@gmail.com", "Test!000");
        });
    </script>
}
