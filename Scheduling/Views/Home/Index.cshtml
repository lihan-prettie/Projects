@{
    ViewData["Title"] = "啃得基有限公司排班系統";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(180deg, #fff8dc 0%, #fff 100%);
            font-family: "Microsoft JhengHei", sans-serif;
        }

        .hero {
            background-color: #fff7bf;
            color: #000000;
            border-radius: 15px;
            padding: 60px 20px;
            box-shadow: 0 4px 15px rgba(255, 165, 0, 0.3);
            margin: 50px auto;
            max-width: 800px;
        }

        h1 {
            font-weight: 800;
            letter-spacing: 2px;
            font-size: 2.8rem;
        }

        h2 {
            color: #b8860b;
            font-weight: 700;
        }

        .btn-main {
            background-color: #f7cf05;
            color: #b8860b;
            border: none;
            font-weight: 600;
            border-radius: 30px;
            padding: 10px 25px;
            transition: all 0.3s ease;
        }

            .btn-main:hover {
                background-color: #ffa500;
                color: #fff8dc;
                box-shadow: 0 0 10px rgba(255, 165, 0, 0.5);
            }

        footer {
            margin-top: 60px;
            color: #8b6b00;
            font-size: 0.9rem;
        }

        .logo {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background-color: #ffb74d;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 800;
            color: #fff;
            font-size: 2rem;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
            margin: 0 auto 20px auto;
        }
    </style>
}

<div class="container text-center">
    <div class="hero">
        <div class="logo">K</div>
        <h1>啃得基有限公司排班系統</h1>
        <h2 class="mt-3">Kentucky Co. Scheduling System</h2>
        <p class="mt-4 fs-5">
            歡迎使用啃得基員工排班系統。<br />
            請登入系統以查看、編輯或管理班表。
        </p>
        <div class="mt-4">
            <a href="/Login/Index" class="btn btn-main me-3">
                <i class="bi bi-box-arrow-in-right"></i> 登入系統
            </a>
            <a href="/Signup/Index" class="btn btn-outline-warning text-dark fw-bold">
                <i class="bi bi-person-plus"></i> 註冊帳號
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.js"></script>
}
