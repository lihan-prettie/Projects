@model List<Shopping.Models.Product>
@{
    ViewData["Title"] = "商城";
}
@section Styles {
    <style>
        .qty-icon {
            font-size: 2rem;
            line-height: 1;
        }
    </style>
}
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @* 圖片 *@
                    <img src="@item.ImageUrl" alt="@item.ProductName" class="card-img-top"
                        style="height:200px;object-fit:cover;" />

                    <div class="card-body d-flex flex-column">
                        @* 商品名和價格 *@
                        <h5 class="card-title text-center">@item.ProductName</h5>
                        <p class="card-text text-dark fw-bold text-center">NT$@item.Price</p>

                        @* 加入購物車 *@
                        <div class="mt-auto">
                            <input type="hidden" name="productId" value="@item.ProductId" />

                            <div class="mb-2">
                                <div class="input-group">
                                    <button class="btn btn-outline-success" type="button"
                                        onclick="this.nextElementSibling.stepDown()"><strong
                                            class="qty-icon">-</strong></button>
                                    <input type="number" name="quantity" value="1" min="1" max="@item.Stock"
                                        class="form-control text-center fw-bold quantity_inpute" />
                                    <button class="btn btn-outline-success" type="button"
                                        onclick="this.previousElementSibling.stepUp()"><strong
                                            class="qty-icon">+</strong></button>
                                </div>
                            </div>
                            <button class="btn btn-success w-100" onclick="addToCart(@item.ProductId,this)"
                                type="button">加入購物車</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.all.min.js" crossorigin="anonymous"
        referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        //加入購物車函式
        async function addToCart(productId, btn) {
            const qnt = parseInt($(btn).closest(".card").find(".quantity_inpute").val());
            if (qnt <= 0 || isNaN(qnt)) {
                Swal.fire({
                    title: "商品數量需大於零",
                    icon: "warning"
                });
                return;
            }
            const res = await authFetch("/api/carts/items", {
                method: "POST",
                body: JSON.stringify({
                    productId: productId,
                    quantity: qnt
                })
            });

            if (res.status === 401) {
                Swal.fire({
                    title: "登入後才可以將商品加入購物車",
                    icon: "warning"
                }).then(() => {
                    window.location.href = "/Member/Index";
                });
                return;
            }

            const data = await res.json();
            if (!res.ok) {
                Swal.fire({
                    title: data.message,
                    icon: "error"
                });
                return;
            }
            Swal.fire({
                title: data.message,
                icon: "success"
            });
            updateCartBadge();
        }
    </script>
}