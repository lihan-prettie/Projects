    <script>
        document.addEventListener("DOMContentLoaded", loadCart);

        async function loadCart() {
            const res = await authFetch("/api/carts");
            if (res.status === 401) {
                await Swal.fire({
                    title: "è«‹å…ˆç™»å…¥",
                    icon: "warning"
                });
                location.href = "/Member/Index";
                return;
            }
            const data = await res.json();
            renderCart(data.items, data.total);
        }

        //æ¸²æŸ“è³¼ç‰©è»Š
        function renderCart(items, total) {
            const tbody = document.querySelector("#cartTable tbody");
            tbody.innerHTML = "";

            if (items.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            ğŸ›ï¸ è³¼ç‰©è»Šç›®å‰æ²’æœ‰å•†å“
                        </td>
                    </tr>`;
                $("#cartTotal").text(0);
                $("#checkoutBtn").prop("disabled", true);
                return;
            }

            items.forEach(item => {
                tbody.innerHTML += `
                <tr>
                    <td class="fw-semibold">${item.productName}</td>
                    <td class="text-end">$${item.price}</td>
                    <td class="text-center">
                        <div class="qty-control">
                            <button class="qty-btn"
                                ${item.quantity === 1 ? "disabled" : ""}
                                onclick="changeQty(${item.productId}, ${item.quantity - 1})">âˆ’</button>

                            <input class="form-control form-control-sm qty-input"
                                value="${item.quantity}" disabled>

                            <button class="qty-btn"
                                onclick="changeQty(${item.productId}, ${item.quantity + 1})">ï¼‹</button>
                        </div>
                    </td>
                    <td class="text-end fw-semibold">$${item.subtotal}</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="deleteItem(${item.productId})">âœ•</button>
                    </td>
                </tr>`;
            });

            $("#cartTotal").text(total);
            $("#checkoutBtn").prop("disabled", false);
        }

        // ä¿®æ”¹æ•¸é‡
        async function changeQty(productId, quantity) {
            if (quantity < 1) return;
            const res = await authFetch(`/api/carts/items/${productId}`, {
                method: "PUT",
                body: JSON.stringify({ quantity: quantity })
            });

            const data = await res.json();
            if (res.ok) {
                loadCart();
                updateCartBadge();
            } else {
                Swal.fire({
                    title: data.message,
                    icon: "error"
                });
            }
        }

        // åˆªé™¤å•†å“
        async function deleteItem(productId) {
            const confirm = await Swal.fire({
                title: "ç¢ºå®šè¦ç§»é™¤å•†å“ï¼Ÿ",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "åˆªé™¤",
                cancelButtonText: "å–æ¶ˆ"
            });

            if (!confirm.isConfirmed) return;

            const res = await authFetch(`/api/carts/items/${productId}`, {
                method: "DELETE"
            });

            const data = await res.json();
            if (res.ok) {
                loadCart();
                updateCartBadge();
            } else {
                Swal.fire({
                    title: data.message,
                    icon: "error"
                });
            }
        }
        // çµå¸³
        function goCheckout() {
            location.href = "/Order/Checkout";
        }
    </script>
