@{
    ViewData["Title"] = "購物車";
}
@section Styles{
    <style>
        .qty-control {
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .qty-btn {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            border: 1px solid #ced4da;
            background: #fff;
            font-weight: bold;
            cursor: pointer;
            transition: transform .1s ease, background .1s;
        }

            .qty-btn:hover {
                background: #f1f3f5;
            }

            .qty-btn:active {
                transform: scale(0.85);
            }

        .qty-input {
            width: 48px;
            text-align: center;
        }

    </style>
}
<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="mb-4">
                <h2 class="fw-bold text-primary mb-2">
                    <i class="bi bi-cart-check me-2"></i>我的購物車
                </h2>
                <p class="text-muted">確認您的購物清單與數量</p>
            </div>

            <!-- 購物車列表 -->
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>購物清單</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0" id="cartTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4"><i class="bi bi-box-seam me-1"></i>商品</th>
                                    <th class="text-end">單價</th>
                                    <th class="text-center">數量</th>
                                    <th class="text-end pe-4">小計</th>
                                    <th class="text-center" style="width: 80px;"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- 總金額 + 結帳 -->
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center flex-wrap gap-3 p-4">
                    <div>
                        <span class="fs-6 text-muted d-block mb-1">總計</span>
                        <span class="fs-3 fw-bold text-danger">
                            <i class="bi bi-currency-dollar me-1"></i><span id="cartTotal">0</span>
                        </span>
                    </div>

                    <button id="checkoutBtn"
                            class="btn btn-lg btn-success px-5 fw-bold"
                            onclick="goCheckout()"
                            disabled>
                        <i class="bi bi-arrow-right-circle me-2"></i>前往結帳
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", loadCart);

        async function loadCart() {
            const res = await authFetch("/api/carts");
            if (res.status === 401) {
                await Swal.fire({
                    title: "請先登入",
                    icon: "warning"
                });
                location.href = "/Member/Index";
                return;
            }
            const data = await res.json();
            renderCart(data.items, data.total);
        }

        //渲染購物車
        function renderCart(items, total) {
            const tbody = document.querySelector("#cartTable tbody");
            tbody.innerHTML = "";

            if (items.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="bi bi-cart-x" style="font-size: 3rem;"></i>
                            <p class="mt-3 mb-0 fs-5">購物車目前沒有商品</p>
                            <a href="/Product/Index" class="btn btn-outline-primary mt-3">
                                <i class="bi bi-arrow-left me-2"></i>前往商城選購
                            </a>
                        </td>
                    </tr>`;
                $("#cartTotal").text(0);
                $("#checkoutBtn").prop("disabled", true);
                return;
            }

            items.forEach(item => {
                tbody.innerHTML += `
                <tr class="border-bottom">
                    <td class="fw-semibold ps-4">${item.productName}</td>
                    <td class="text-end">NT$${item.price}</td>
                    <td class="text-center">
                        <div class="qty-control">
                            <button class="qty-btn"
                                ${item.quantity === 1 ? "disabled" : ""}
                                onclick="changeQty(${item.productId}, ${item.quantity - 1})">−</button>

                            <input class="form-control form-control-sm qty-input"
                                value="${item.quantity}" disabled>

                            <button class="qty-btn"
                                onclick="changeQty(${item.productId}, ${item.quantity + 1})">＋</button>
                        </div>
                    </td>
                    <td class="text-end fw-bold text-danger pe-4">NT$${item.subtotal}</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="deleteItem(${item.productId})"
                                title="移除商品">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>`;
            });

            $("#cartTotal").text(total);
            $("#checkoutBtn").prop("disabled", false);
        }

        // 修改數量
        async function changeQty(productId, quantity) {
            if (quantity < 1) return;
            const res = await authFetch(`/api/carts/items/${productId}`, {
                method: "PUT",
                body: JSON.stringify({ quantity: quantity })
            });

            const data = await res.json();
            if (res.ok) {
                loadCart();
                updateCartBadge();
            } else {
                Swal.fire({
                    title: data.message,
                    icon: "error"
                });
            }
        }

        // 刪除商品
        async function deleteItem(productId) {
            const confirm = await Swal.fire({
                title: "確定要移除商品？",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "刪除",
                cancelButtonText: "取消"
            });

            if (!confirm.isConfirmed) return;

            const res = await authFetch(`/api/carts/items/${productId}`, {
                method: "DELETE"
            });

            const data = await res.json();
            if (res.ok) {
                loadCart();
                updateCartBadge();
            } else {
                Swal.fire({
                    title: data.message,
                    icon: "error"
                });
            }
        }
        // 結帳
        function goCheckout() {
            location.href = "/Order/Checkout";
        }
    </script>
}
