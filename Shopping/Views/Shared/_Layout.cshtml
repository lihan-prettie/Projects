<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shopping.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">首頁</a>
                <a class="navbar-brand" asp-controller="Product" asp-action="Index">商城</a>
                <div class="ms-auto d-flex align-items-center" id="authArea">
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - 商城模擬
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        /* ===== JWT 共用工具 ===== */
        const TOKEN_KEY = "auth_token";

        function getToken() {
            return localStorage.getItem(TOKEN_KEY);
        }
        function setToken(token){
            return localStorage.setItem(TOKEN_KEY,token);
        }

        function logout() {
            localStorage.removeItem(TOKEN_KEY);
            location.href = "/Member/Index";
        }
        //統一所有api呼叫且如果有jwt會自動帶
        async function authFetch(url, options = {}) {
            const token = getToken();
            const headers = {
                ...(options.headers || {}),
                "Content-Type": "application/json",
                ...(token ? { "Authorization": `Bearer ${token}` } : {})
            };
            return fetch(url, { ...options, headers });
        }

        /* ===== Header 狀態 ===== */
        document.addEventListener("DOMContentLoaded", () => {
            initHeader();
            updateCartBadge();
        });


        async function initHeader() {
            const authArea = document.getElementById("authArea");
            const token = getToken();

            if (!token) {
                authArea.innerHTML = `
                    <a href="/Member/Index" class="btn btn-success text-light">
                        登入 / 註冊
                    </a>
                `;
                return;
            }

            // 嘗試抓購物車（驗證 JWT 是否有效）
            const res = await authFetch("/api/carts");

            if (res.status === 401) {
                localStorage.removeItem(TOKEN_KEY);
                authArea.innerHTML = `
                    <a href="/Member/Index" class="btn btn-success text-light">
                        登入 / 註冊
                    </a>
                `;
                return;
            }

            const data = await res.json();
            const count = data.items.length;

            authArea.innerHTML = `
                <a href="/Cart/Index" class="btn btn-warning position-relative me-2">
                    購物車
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        ${count}
                    </span>
                </a>
                <a href="/Member/OrderPage" class="btn btn-outline-success position-relative me-2">
                    我的訂單
                </a>
                <button class="btn btn-success" onclick="logout()">登出</button>
            `;
        }
            async function updateCartBadge() {
            const token = getToken();
            const badge = document.getElementById("cartBadge");

            if (!badge) return;

            if (!token) {
                badge.style.display = "none";
                return;
            }

            const res = await authFetch("/api/carts");

            if (!res.ok) {
                badge.style.display = "none";
                return;
            }

            const data = await res.json();
            const count = data.items.length;

            if (count === 0) {
                badge.style.display = "none";
            } else {
                badge.innerText = count;
                badge.style.display = "inline-block";
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
