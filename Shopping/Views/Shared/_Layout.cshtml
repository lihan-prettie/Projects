<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shopping.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 py-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill me-2"></i>首頁
                </a>
                <a class="navbar-brand fw-bold text-success d-flex align-items-center" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-shop me-2"></i>商城
                </a>
                <div class="ms-auto d-flex align-items-center gap-2" id="authArea">
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4">
        <main role="main" class="pb-5 mb-5" style="padding-bottom: 20vh !important;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-4 bg-light" style="margin-top: 4rem !important;">
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 商城模擬 | Shopping Mall Demo. All rights reserved.</p>
            <p class="text-muted small mt-2">
                <i class="bi bi-envelope me-1"></i>服務信箱 | 
                <i class="bi bi-telephone me-1"></i>客服專線
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        /* ===== JWT 共用工具 ===== */
        const TOKEN_KEY = "auth_token";

        function getToken() {
            return localStorage.getItem(TOKEN_KEY);
        }
        function setToken(token){
            return localStorage.setItem(TOKEN_KEY,token);
        }

        function logout() {
            localStorage.removeItem(TOKEN_KEY);
            location.href = "/Member/Index";
        }
        //統一所有api呼叫且如果有jwt會自動帶
        async function authFetch(url, options = {}) {
            const token = getToken();
            const headers = {
                ...(options.headers || {}),
                "Content-Type": "application/json",
                ...(token ? { "Authorization": `Bearer ${token}` } : {})
            };
            return fetch(url, { ...options, headers });
        }

        /* ===== Header 狀態 ===== */
        document.addEventListener("DOMContentLoaded", () => {
            initHeader();
            updateCartBadge();
        });


        async function initHeader() {
            const authArea = document.getElementById("authArea");
            const token = getToken();

            if (!token) {
                authArea.innerHTML = `
                    <a href="/Member/Index" class="btn btn-success text-light">
                        <i class="bi bi-person-circle me-1"></i>登入 / 註冊
                    </a>
                `;
                return;
            }

            // 嘗試抓購物車（驗證 JWT 是否有效）
            const res = await authFetch("/api/carts");

            if (res.status === 401) {
                localStorage.removeItem(TOKEN_KEY);
                authArea.innerHTML = `
                    <a href="/Member/Index" class="btn btn-success text-light">
                        <i class="bi bi-person-circle me-1"></i>登入 / 註冊
                    </a>
                `;
                return;
            }

            const data = await res.json();
            const count = data.items ? data.items.length : 0;

            authArea.innerHTML = `
                <a href="/Cart/Index" class="btn btn-warning position-relative me-2">
                    <i class="bi bi-cart3 me-1"></i>購物車
                    <span id="cartBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" ${count === 0 ? 'style="display:none;"' : ''}>
                        ${count}
                    </span>
                </a>
                <a href="/Member/OrderPage" class="btn btn-outline-success position-relative me-2">
                    <i class="bi bi-receipt me-1"></i>我的訂單
                </a>
                <button class="btn btn-success" onclick="logout()">
                    <i class="bi bi-box-arrow-right me-1"></i>登出
                </button>
            `;
        }
        async function updateCartBadge() {
            const token = getToken();
            let badge = document.getElementById("cartBadge");

            // 如果 badge 不存在但用戶已登入，重新初始化 header
            if (!badge && token) {
                await initHeader();
                badge = document.getElementById("cartBadge");
            }

            if (!badge) return;

            if (!token) {
                badge.style.display = "none";
                return;
            }

            const res = await authFetch("/api/carts");

            if (!res.ok) {
                badge.style.display = "none";
                return;
            }

            const data = await res.json();
            const count = data.items ? data.items.length : 0;

            if (count === 0) {
                badge.style.display = "none";
            } else {
                badge.innerText = count;
                badge.style.display = "inline-block";
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
